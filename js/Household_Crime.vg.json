{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 575,
    "height": 380,
  "data": {
    "url": "dataset/National_7c_v1.0.csv"
  },
    "params": [
      {
        "name": "year_selection",
        "value": 2008,
        "bind": {
          "input": "range",
          "min": 2008,
          "max": 2022,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Year == year_selection"},
      {
        "window": [
          {"op": "mean", "field": "Victimisation Rate", "as": "mean_rate"}
        ]
      }
    ],
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Household Crime",
            "type": "nominal",
            "axis": {"title": "Crime Type", "labelAngle": -45}
          },
          "y": {
            "field": "Victimisation Rate",
            "type": "quantitative",
            "title": "Victimization Rate (%)",
            "scale": {"domain": [0, 12]}
          },
          "color": {
            "field": "Household Crime",
            "type": "nominal",
            "scale": {
              "range": [
                "#009E73",
                "#964B00",
                "#0072B2",
                "#FE6100",
                "#a8a8a8",
                "#56B4E9"
              ]
            },
            "legend": {
                "title": "Household Crime Type"
            }
          },
          "tooltip": [
            {"field": "Year", "type": "quantitative", "title": "Year"},
            {
              "field": "Household Crime",
              "type": "nominal",
              "title": "Household Crime"
            },
            {
              "field": "Victimisation Rate",
              "type": "quantitative",
              "title": "Victimisation Rate (%)",
              "format": ".1f"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "bottom",
          "dy": -5
        },
        "encoding": {
          "x": {"field": "Household Crime", "type": "nominal"},
          "y": {"field": "Victimisation Rate", "type": "quantitative"},
          "text": {
            "field": "Victimisation Rate",
            "type": "quantitative",
            "format": ".1f"
          }
        }
      },
      {
        "mark": {"type": "rule", "color": "red", "strokeDash": [3, 3]},
        "encoding": {"y": {"field": "mean_rate", "aggregate": "mean"}}
      },
      {
        "mark": {"type": "text", "align": "right", "dx": 370},
        "encoding": {
          "y": {"field": "mean_rate", "aggregate": "mean"},
          "text": {"value": "Average Rate:"}
        }
      },
      {
        "mark": {"type": "text", "align": "left", "dx": 663},
        "encoding": {
          "x": {"value": 0},
          "y": {"field": "mean_rate", "aggregate": "mean"},
          "text": {
            "aggregate": "mean",
            "field": "mean_rate",
            "type": "quantitative",
            "format": ".1f"
          }
        }
      }
    ]
  }